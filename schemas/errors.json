{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.1.0",
  "title": "Structs Error Codes",
  "description": "Complete catalog of error codes for AI agents",
  "structs:v0.8.0-beta": {
    "resolvedBugs": [
      {
        "bug": "GetInfusionByID array split bug",
        "status": "resolved",
        "description": "Bug in GetInfusionByID array split logic has been resolved"
      },
      {
        "bug": "EventGuildBankAddress format bug",
        "status": "resolved",
        "description": "Bug in EventGuildBankAddress format has been resolved"
      },
      {
        "bug": "BankAddress format logging bug",
        "status": "resolved",
        "description": "Bug in BankAddress format logging has been resolved"
      },
      {
        "bug": "Fleet movement logic",
        "status": "resolved",
        "description": "Fleet movement bug fixes and improvements applied"
      }
    ]
  },
  "type": "object",
  "structs:category": "errors",
  "errorCodes": {
    "0": {
      "code": 0,
      "name": "SUCCESS",
      "category": "success",
      "description": "Operation successful",
      "action": "continue"
    },
    "1": {
      "code": 1,
      "name": "GENERAL_ERROR",
      "category": "error",
      "description": "General error occurred",
      "action": "log and retry",
      "retryable": true
    },
    "2": {
      "code": 2,
      "name": "INSUFFICIENT_FUNDS",
      "category": "error",
      "description": "Insufficient funds for transaction",
      "action": "wait for resources",
      "retryable": false,
      "requires": ["check player inventory", "wait for resources"]
    },
    "3": {
      "code": 3,
      "name": "INVALID_SIGNATURE",
      "category": "error",
      "description": "Transaction signature is invalid",
      "action": "re-sign transaction",
      "retryable": true
    },
    "4": {
      "code": 4,
      "name": "INSUFFICIENT_GAS",
      "category": "error",
      "description": "Insufficient gas for transaction",
      "action": "increase gas limit",
      "retryable": true
    },
    "5": {
      "code": 5,
      "name": "INVALID_MESSAGE",
      "category": "error",
      "description": "Message format is invalid",
      "action": "validate message format",
      "retryable": false
    },
    "6": {
      "code": 6,
      "name": "PLAYER_HALTED",
      "category": "error",
      "description": "Player is halted (offline)",
      "action": "wait for player online",
      "retryable": false,
      "requires": ["check player status", "wait for player online"]
    },
    "7": {
      "code": 7,
      "name": "INSUFFICIENT_CHARGE",
      "category": "error",
      "description": "Struct has insufficient charge",
      "action": "wait for charge",
      "retryable": false,
      "requires": ["check struct charge", "wait for charge"]
    },
    "8": {
      "code": 8,
      "name": "INVALID_LOCATION",
      "category": "error",
      "description": "Location is invalid or inaccessible",
      "action": "validate location",
      "retryable": false
    },
    "9": {
      "code": 9,
      "name": "INVALID_TARGET",
      "category": "error",
      "description": "Target is invalid or not attackable",
      "action": "validate target",
      "retryable": false
    },
    "404": {
      "code": 404,
      "name": "ENTITY_NOT_FOUND",
      "category": "http",
      "description": "Entity not found",
      "action": "verify entity ID",
      "retryable": false
    },
    "400": {
      "code": 400,
      "name": "BAD_REQUEST",
      "category": "http",
      "description": "Invalid request",
      "action": "validate request format",
      "retryable": false
    },
    "500": {
      "code": 500,
      "name": "INTERNAL_SERVER_ERROR",
      "category": "http",
      "description": "Server error",
      "action": "retry with backoff",
      "retryable": true
    },
    "timeout": {
      "code": "timeout",
      "name": "REQUEST_TIMEOUT",
      "category": "network",
      "description": "Request timed out",
      "action": "retry with backoff",
      "retryable": true
    },
    "network": {
      "code": "network",
      "name": "NETWORK_ERROR",
      "category": "network",
      "description": "Network error occurred",
      "action": "retry with backoff",
      "retryable": true
    }
  },
  "structs:errorCategories": {
    "success": ["0"],
    "error": ["1", "2", "3", "4", "5", "6", "7", "8", "9"],
    "http": ["404", "400", "500"],
    "network": ["timeout", "network"]
  },
  "structs:retryableErrors": {
    "retryable": ["1", "3", "4", "500", "timeout", "network"],
    "notRetryable": ["0", "2", "5", "6", "7", "8", "9", "404", "400"]
  },
  "structs:errorHandling": {
    "strategy": {
      "retryable": {
        "action": "retry",
        "maxRetries": 3,
        "backoff": "exponential",
        "initialDelay": 1000
      },
      "notRetryable": {
        "action": "log",
        "fallback": "abort or wait"
      }
    }
  }
}

