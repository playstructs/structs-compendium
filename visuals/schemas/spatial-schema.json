{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "title": "Spatial Schema",
  "description": "Schema for spatial/geometric data (coordinates, positions, layouts)",
  "type": "object",
  "structs:category": "visual",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique spatial data identifier"
    },
    "type": {
      "type": "string",
      "enum": ["coordinate-system", "position", "layout", "region"],
      "description": "Type of spatial data"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title"
    },
    "description": {
      "type": "string",
      "description": "Description of spatial data"
    },
    "coordinateSystem": {
      "type": "object",
      "description": "Coordinate system definition",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["cartesian", "polar", "grid"],
          "description": "Coordinate system type"
        },
        "origin": {
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          },
          "description": "Origin point"
        },
        "units": {
          "type": "string",
          "description": "Unit of measurement"
        },
        "bounds": {
          "type": "object",
          "properties": {
            "min": {
              "type": "object",
              "properties": {
                "x": {"type": "number"},
                "y": {"type": "number"},
                "z": {"type": "number"}
              }
            },
            "max": {
              "type": "object",
              "properties": {
                "x": {"type": "number"},
                "y": {"type": "number"},
                "z": {"type": "number"}
              }
            }
          },
          "description": "Coordinate system bounds"
        }
      }
    },
    "positions": {
      "type": "array",
      "description": "List of positions",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Entity or object identifier"
          },
          "entityType": {
            "type": "string",
            "description": "Type of entity (e.g., 'Planet', 'Fleet')"
          },
          "coordinates": {
            "type": "object",
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "z": {"type": "number"}
            },
            "description": "Position coordinates"
          },
          "metadata": {
            "type": "object",
            "description": "Additional position metadata"
          }
        },
        "required": ["id", "coordinates"]
      }
    },
    "regions": {
      "type": "array",
      "description": "List of regions or areas",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Region identifier"
          },
          "type": {
            "type": "string",
            "description": "Region type"
          },
          "bounds": {
            "type": "object",
            "properties": {
              "min": {
                "type": "object",
                "properties": {
                  "x": {"type": "number"},
                  "y": {"type": "number"},
                  "z": {"type": "number"}
                }
              },
              "max": {
                "type": "object",
                "properties": {
                  "x": {"type": "number"},
                  "y": {"type": "number"},
                  "z": {"type": "number"}
                }
              }
            },
            "description": "Region bounds"
          },
          "metadata": {
            "type": "object",
            "description": "Additional region metadata"
          }
        },
        "required": ["id", "type", "bounds"]
      }
    },
    "relatedSchemas": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "References to related schemas"
    }
  },
  "required": ["id", "type", "title"]
}

