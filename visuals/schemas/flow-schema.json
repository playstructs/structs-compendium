{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "title": "Flow Schema",
  "description": "Schema for process flows and workflows",
  "type": "object",
  "structs:category": "visual",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique flow identifier"
    },
    "type": {
      "type": "string",
      "enum": ["process", "workflow", "conversion", "state-machine"],
      "description": "Type of flow"
    },
    "title": {
      "type": "string",
      "description": "Human-readable flow title"
    },
    "description": {
      "type": "string",
      "description": "Description of what the flow represents"
    },
    "category": {
      "type": "string",
      "enum": ["gameplay", "economics", "technical", "system"],
      "description": "Category of flow"
    },
    "steps": {
      "type": "array",
      "description": "Steps in the flow",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique step identifier"
          },
          "label": {
            "type": "string",
            "description": "Human-readable step label"
          },
          "type": {
            "type": "string",
            "enum": ["action", "state", "decision", "process", "conversion"],
            "description": "Type of step"
          },
          "action": {
            "type": "string",
            "description": "Action ID if step is an action (e.g., 'mine', 'refine')"
          },
          "actionReference": {
            "type": "string",
            "description": "Reference to action schema"
          },
          "input": {
            "type": "object",
            "description": "Input resources or state"
          },
          "output": {
            "type": "object",
            "description": "Output resources or state"
          },
          "requirements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Requirements for this step"
          },
          "metadata": {
            "type": "object",
            "description": "Additional step metadata"
          }
        },
        "required": ["id", "label", "type"]
      }
    },
    "transitions": {
      "type": "array",
      "description": "Transitions between steps",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique transition identifier"
          },
          "from": {
            "type": "string",
            "description": "Source step ID"
          },
          "to": {
            "type": "string",
            "description": "Target step ID"
          },
          "label": {
            "type": "string",
            "description": "Transition label"
          },
          "condition": {
            "type": "string",
            "description": "Condition for transition (if applicable)"
          },
          "metadata": {
            "type": "object",
            "description": "Additional transition metadata"
          }
        },
        "required": ["id", "from", "to"]
      }
    },
    "relatedSchemas": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "References to related schemas"
    },
    "relatedEndpoints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "References to related API endpoints"
    },
    "relatedDiagrams": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "References to related diagrams"
    }
  },
  "required": ["id", "type", "title", "steps", "transitions"]
}

